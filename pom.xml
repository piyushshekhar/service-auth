    <modelVersion>4.0.0</modelVersion>
    <groupId>com.photon.phresco.service</groupId>
    <artifactId>phresco-service-auth</artifactId>
	<version>2.0.0.10001-SNAPSHOT</version>
    <packaging>war</packaging>
    <name>Service Auth</name>
    <description>Service Auth</description>
	<url>http://www.phresco.org</url>

     <distributionManagement>
        <site>
            <id>phresco.service.auth</id>
            <name>Phresco Service Authentication</name>
            <url>${siteBaseUrl}/service/phresco-service-auth/</url>
        </site>
    </distributionManagement>

    <dependencies>
        <dependency>
			  <groupId>com.photon.phresco</groupId>
			  <artifactId>phresco-ldap</artifactId>
              <version>${project.version}</version>
        </dependency>
        
        <dependency>
			<groupId>com.sun.jersey</groupId>
			<artifactId>jersey-json</artifactId>
			<version>1.8</version>
		</dependency>
		
        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-bundle</artifactId>
            <version>1.8</version>
        </dependency>
        
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.9</version>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.16</version>
        </dependency>
        
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    
    <build>
		<directory>do_not_checkin/target</directory>
        <finalName>auth</finalName>
        
        <resources>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering>
          </resource>
        </resources>
        
        <plugins>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>tomcat-maven-plugin</artifactId>
              <version>1.1</version>            
              <configuration>
                <port>${server.port}</port>
                <path>/${project.build.finalName}</path>
                <server>auth-service</server>
              </configuration>
            </plugin>
			<plugin>
                <groupId>com.photon.phresco.plugins</groupId>
                <artifactId>java-maven-plugin</artifactId>
                <version>${project.version}</version>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>
    
</project>
